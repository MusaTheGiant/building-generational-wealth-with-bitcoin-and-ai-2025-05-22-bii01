<script>
    // Auto-update year in footer
    document.getElementById('dynamic-year').textContent = new Date().getFullYear();

    // Animate elements on load
    window.addEventListener('load', function() {
        const fadeElements = document.querySelectorAll('.fade-in');
        fadeElements.forEach((element, index) => {
            setTimeout(() => {
                element.style.opacity = '1';
                element.style.transform = 'translateY(0)';
            }, index * 200);
        });
    });

    // Track page analytics and conversions
    if (typeof gtag !== 'undefined') {
        gtag('event', 'page_view', {
            'page_title': 'Thank You Page',
            'page_location': window.location.href
        });
        
        // Track newsletter signup completion
        gtag('event', 'newsletter_signup_complete', {
            'event_category': 'engagement',
            'event_label': 'thank_you_page'
        });
    }

    // Track affiliate link clicks
    document.querySelector('a[href*="masteraffiliateprofits.com"]').addEventListener('click', function() {
        if (typeof gtag !== 'undefined') {
            gtag('event', 'affiliate_click', {
                'event_category': 'monetization',
                'event_label': 'thank_you_page_cta',
                'value': 1
            });
        }
    });

    // Add some interactive feedback
    const ctaButton = document.querySelector('.btn-primary');
    ctaButton.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-3px) scale(1.02)';
    });
    
    ctaButton.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0) scale(1)';
    });

    // Smooth scroll behavior for any internal links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
</script>
